<Window x:Class="LaserControl.Startup.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingWindow" Height="283" Width="299"
        Background="{StaticResource Background}" WindowStyle="None" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="27"/>        
        </Grid.RowDefinitions>
        <Image Source="/LaserControl;component/Design/Images/StartupImage.jpg" />
        <Label x:Name="DispLabel" Foreground="White" Content="Loading..." Grid.Row="1" VerticalAlignment="Stretch" VerticalContentAlignment="Top"/>
    </Grid>
</Window>
